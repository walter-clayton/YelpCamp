<%- include ('../partials/header') %>


<div class="column mx-auto mt-5">
        <h3 style="text-align: center;" > Create a New Campground</h3>
        <div style="mx-auto">
                <form action="/campgrounds" method="POST" >
                    <div class="form-group">
                       <input class="form-control" type="text" name = "name" placeholder="name">
                   </div>
                    <div class="form-group">
                       <input class="form-control" type="number" name = "price" placeholder="price" min = "0.01" step="0.01">
                   </div>
                   <div class="form-group">
                       <div class="form-group">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name = "image" placeholder="image url"></textarea>
                       </div>
                       <div class="form-group">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name = "description" placeholder="description"></textarea>
                       </div>
                       <div class="form-group">
                        <input class="form-control" type="text" name = "location" placeholder="Country or City">
                       </div>
                       <button class="btn btn-lg btn-secondary btn-block">Submit</button>
                   </div>
           </form>
           <a href="/campgrounds">Go back</a>
        </div>
    </div>

<%- include ('../partials/footer') %>