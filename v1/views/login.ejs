<%- include ('./partials/header') %>

<div class="column mx-auto mt-5">
        <h1 style="text-align: center;">Login</h1>
        <div style="d-flex">
            <form action="/login" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-secondary btn-block">Login</button>
                </div>
            </form>
            <div class="border">
                <a href="/forgot" class="d-flex justify-content-center">Forgot password?</a>
            </div>
            
        </div>
        <div>
            <a href="/campgrounds"><i class="fas fa-chevron-left"></i> Go Back</a>
        </div>
    </div>

