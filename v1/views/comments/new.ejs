<div class="column mx-auto mt-5">
        <h3 style="text-align: center;" > Add New Comment to <%= campground.name %></h3>
        <div class="mx-auto">
                <form action="/campgrounds/<%= campground._id %>/comments" method="POST" >
                    <div class="form-group">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name = "comment[text]" placeholder="comment"></textarea>
                   </div>
                   <div class="form-group">
                       <button class="btn btn-lg btn-secondary btn-block">Submit</button>
                   </div>
           </form>
           <a href="/campgrounds">Go back</a>
        </div>
    </div>

